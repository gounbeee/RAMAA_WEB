<!DOCTYPE html>
<html>

  <head>
    <meta charset="utf-8">

    <link rel="stylesheet" href="./css/base.css"></link>
    <link rel="stylesheet" href="./css/menubar.css"></link>
    <link rel="stylesheet" href="./css/attribManager.css"></link>
    <link rel="stylesheet" href="./css/toolbox.css"></link>
    <link rel="stylesheet" href="./css/footer.css"></link>
    <link rel="stylesheet" href="./css/workarea.css"></link>

    <link rel="stylesheet" href="./css/login/login-base.css"></link>

  </head>


  <body>

    <div id="allArea">

      <div class="bl_ramaaApp ly_ramaaApp" id="ramaaApp">

        <div class="loginBase">
          <div class="loginInner">

            <a class="back_btn" href="/login">< back</a>
            
            <div class="loginTitle">
              <p>Reset Password</p>
            </div>

            <div>
              <% if (errorMessage) { %>
              <div class="user-message user-message-error">
                <%= errorMessage %>
              </div>
              <% } %>


              <div class="loginContainer">
                <form class="loginForm" id="resetPassForm" action="/resetpass" method="POST">
                  <ul>
                    <li>
                      <label for="userEmail">Email</label>
                    </li>
                    <li>
                      <input type="text" name="userEmail" id="userEmail">
                    </li>
                    <li>
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    </li>
                    <li>
                      <button type="submit">RESET PASSWORD</button>
                    </li>
                  </ul>
                </form>
              </div>

            </div>

          </div>




        </div>

        <div class="user_logo" id="user_logo">
        </div>

        <div class="bl_menu_wrapper ly_menu_wrapper disable-select" id="menu_wrapper">
        </div>

        <div class="bl_attribManager_wrapper ly_attribManager_wrapper" id="attribManager_wrapper">
        </div>

        <div class="bl_toolbox_wrapper ly_toolbox_wrapper" id="toolbox_wrapper">
        </div>

        <div class="bl_footer_wrapper ly_footer_wrapper" id="footer_wrapper">
        </div>





      </div>


    </div>



  </body>




</html>
