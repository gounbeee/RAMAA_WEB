<!DOCTYPE html>
<html>

  <head>
    <meta charset="utf-8">

  </head>

  <body>

    <div>
      <p>THIS IS RENEW PASSWORD PAGE !!</p>
    </div>

    <div>
      <% if (errorMessage) { %>
      <div class="user-message user-message-error">
        <%= errorMessage %>
      </div>
      <% } %>

      <form id="renewPassForm" action="/renewpass" method="POST">

        <label for="userPass">New Password</label>
        <input type="text" name="userPass" id="userPass">
        <label for="userPassConfirm">Confirm New Password</label>
        <input type="text" name="userPassConfirm" id="userPassConfirm">

        <input type="hidden" name="userId" value="<%= userId %>">
        <input type="hidden" name="passwordToken" value="<%= passwordToken %>">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button type="submit">SET NEW PASSWORD</button>
      </form>

    </div>


  </body>




</html>
